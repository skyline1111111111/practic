@page "{id?}"
@model college.Pages.Специальности.SpecialisationModel
@{

}

<div class="container-spec">
    <div class="spec-back">
        <a style=" font-family: 'Onest', sans-serif;color: royalblue;font-weight: bold;font-size: 20px;" asp-page="SpecialisationsList">&larr; Список специальностей</a>
    </div>
    <div class="spec row">
        <div class="col-xl spec__group">
            <div class="spec-img">
                <img style="width: 100%; height: 100%; object-fit: cover; border-radius: 150px 0px 0px;" src="~/images/imgs/@Model.Specialisations[Model.Id].Photo" alt="Ошибочка" />
            </div>   
            
        </div>
        <div class="col-xl spec__group">
            <h1>@Model.Specialisations[Model.Id].Name</h1>
            <h2>@Model.Specialisations[Model.Id].Code</h2>
            <p>@Model.Specialisations[Model.Id].Description</p>
            <a style=" font-family: 'Onest', sans-serif;color: royalblue;font-weight: bold;font-size: 20px; margin-bottom: 10px" download href="~/pdf/@Model.Specialisations[Model.Id].PdfLink">Учебный план</a>
            <a style=" font-family: 'Onest', sans-serif;color: royalblue;font-weight: bold;font-size: 20px; margin-bottom: 10px" download href="~/excel/@Model.Specialisations[Model.Id].ExcelLink">Календарный график</a>
        </div>
    </div>
</div>